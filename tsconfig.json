{
  "compilerOptions": {
    "target": "ESNext", // Usa ESNext para aprovechar las últimas características de JavaScript
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Asegúrate de tener 'esnext' aquí para las nuevas características
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext", // Asegúrate de que sea 'esnext' para usar módulos ES
    "moduleResolution": "node", // Cambié esto de 'bundler' a 'node' para la correcta resolución de módulos
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
